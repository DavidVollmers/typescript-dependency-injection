{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",
    "baseUrl": ".",
    "outDir": "dist/es6",
    "types": [
      "reflect-metadata"
    ],
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
